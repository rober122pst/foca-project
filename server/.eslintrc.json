{
    "files": ["**/*.ts", "**/*.js"],
    "extends": [
        "@rocketseat/eslint-config/node",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "singleQuote": true,
                "printWidth": 80,
                "tabWidth": 4,
                "endOfLine": "crlf",
                "trailingComma": "es5",
                "bracketSameLine": false
            }
        ]
    }
}